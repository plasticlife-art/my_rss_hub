# App config
BASE_URL=https://cineplexx.me
LOCATION=0

DATE_MODE=today
FIXED_DATE=
TIMEZONE=Europe/Podgorica

OUT_DIR=/out
RSS_FILENAME=cineplexx_rss.xml

# How many recent diff events to include at the top of the RSS feed
EVENTS_LIMIT=150

FEED_TITLE=Cineplexx Podgorica — репертуар (diff + current)
FEED_LINK=https://cineplexx.me/cinemas?location=0
FEED_DESCRIPTION=Авто-RSS: сверху события (добавлен/убран), ниже текущий список фильмов.

# Telegram RSS
TELEGRAM_CHANNELS=
TELEGRAM_POST_LIMIT=5

# State retention
MAX_EVENTS_IN_STATE=5000

# Cache (Redis)
REDIS_URL=redis://redis:6379/0
CACHE_ENABLED=true
CINEPLEXX_FILM_CACHE_TTL_SECONDS=604800
CINEPLEXX_CACHE_NEGATIVE_TTL_SECONDS=3600
MAX_FILM_PAGES_CONCURRENCY=4

# Schedule (sessions)
SCHEDULE_ENABLED=true
SCHEDULE_MAX_DAYS_AHEAD=14
SCHEDULE_MAX_SESSIONS_PER_MOVIE=50
SCHEDULE_MAX_DATES_PER_MOVIE=10
SCHEDULE_CONCURRENCY=4
SCHEDULE_CACHE_TTL_SECONDS=21600
SCHEDULE_CACHE_NEGATIVE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO

# Worker schedule
INTERVAL_MINUTES=360

# Docker compose (prod overrides)
WORKER_IMAGE=ghcr.io/OWNER/cineplexx_rss:latest
NGINX_PORT=8080
